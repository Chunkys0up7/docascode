# DocAsCode MCP Service Configuration

# Paths
DOCASCODE_DATA_DIR=data
DOCASCODE_DOCUMENTS_DIR=data/documents
DOCASCODE_GRAPHS_DIR=data/graphs
DOCASCODE_INDICES_DIR=data/indices
DOCASCODE_TEMPLATES_DIR=templates

# Vector Store Configuration
DOCASCODE_VECTOR_STORE_TYPE=chromadb
DOCASCODE_CHROMADB_PATH=data/indices/chroma
DOCASCODE_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Graph Database Configuration
# Options: networkx (in-memory), neo4j (persistent), json (file-based)
DOCASCODE_GRAPH_BACKEND=networkx

# Neo4j Configuration (if using neo4j backend)
# DOCASCODE_NEO4J_URI=bolt://localhost:7687
# DOCASCODE_NEO4J_USER=neo4j
# DOCASCODE_NEO4J_PASSWORD=password

# NLP Configuration (requires optional 'nlp' dependencies)
DOCASCODE_ENABLE_NLP=false
DOCASCODE_SPACY_MODEL=en_core_web_sm

# Logging Configuration
DOCASCODE_LOG_LEVEL=INFO
# DOCASCODE_LOG_FILE=docascode.log

# Server Configuration
DOCASCODE_SERVER_NAME=docascode-mcp
DOCASCODE_SERVER_VERSION=0.1.0
